{% extends 'base.html.twig' %}

{% block title %}flights - Liste des utilisateurs{% endblock %}

{% block body %}

<section class="container">
    <div class="row">
        <div class="col">
             <h2 class="p-2 text-secondary">Liste des utilisateurs</h2>
                <table class="table text-center">
                    <thead>
                        <tr>
                            <th>Nom d'utilisateur</th>
                            <th>Rôles</th>
                           
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for u in user %}
                        <tr>
                            <td>{{ u.username }}</td>
                            <td>
                                {%for role in u.roles %}
                                    {% if role == "ROLE_USER" %}
                                        <span class="bg-secondary text-light p-1">Utilisateur</span>
                                    {% elseif role == "ROLE_ADMIN" %}
                                        <span class="bg-success text-light p-1">Administrateur</span>
                                    {% endif %}
                                {% endfor %}
                            </td>
                            <td>
                                {{ include('admin/user/_delete_form.html.twig') }}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">Pas d'utilisateurs enregistrés</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <button class="btn btn-warning m-3">
                    <a href="/admin/register" style="text-decoration:none; color:#000">
                        <i class="fa-solid fa-square-plus p-2" style="color: #000000;"></i>
                    Créer un nouvel utilisateur</a>
                </button>
        </div>
    </div>
</section>

{% endblock %}
