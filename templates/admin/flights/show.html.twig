{% extends 'base.html.twig' %}

{% block title %}flights - Informations sur le vol {{ flight.num }}{% endblock %}

{% block body %}

<section class="container">
    <div class="row">
        <div class="col">

            <h1>Vol {{ flight.num }}</h1>

            <table class="table text-center">
                <tbody>
                
                    <tr>
                        <th>Numéro du vol</th>
                        <td>{{ flight.num }}</td>
                    </tr>
                    <tr>
                        <th>Départ</th>
                        <td>{{ flight.departure ? flight.departure|date('d/m/Y') : '' }} <br> {{ flight.departure ? flight.departure|date('H:i') : '' }} <br> de {{ flight.cityDeparture }}</td>
                        
                    </tr>
                    <tr>
                        <th>Arrivée</th>
                        <td>{{ flight.arrival ? flight.arrival|date('d/m/Y') : '' }} <br> {{ flight.arrival ? flight.arrival|date('H:i') : '' }} <br> vers {{ flight.cityArrival }}</td>
                    </tr>
                    <tr>
                        <th>Prix</th>
                        <td>{{ flight.price }} €</td>
                    </tr>
                    <tr>
                        <th>Réduction</th>
                        <td>{{ flight.discount ? '<i class="fa-solid fa-square-check" style="color: #24c637; font-size:30px;"></i>' : '<i class="fa-solid fa-square-xmark" style="color: #d7373f; font-size:30px;"></i>' }}</td>
                    </tr>
                    <tr>
                        <th>Nombre de places</th>
                        <td>{{ flight.nbSeat }}</td>
                    </tr>
                </tbody>
            </table>

            <div class="buttons d-flex">
                <button class="btn btn-warning m-1" style="width:50px"><a href="{{ path('admin_flights_edit', {'id': flight.id}) }}" style="text-decoration:none; color:#000"> <i class="fa-solid fa-pen-to-square" style="color: #000000;"></i></a></button>

                {{ include('admin/flights/_delete_form.html.twig') }}
            </div>
            <div class="return d-flex justify-content-end">
             <button class="btn btn-secondary m-3"><a href="{{ path('admin_index') }}" style="text-decoration:none; color:#fff"><i class="fa-solid fa-rotate-left" style="color: #fff;"></i> Retour à la liste</a></button>
            </div>
        </div>
    </div>
</section>

{% endblock %}
