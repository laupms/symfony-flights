{% extends 'base.html.twig' %}

{% block title %}flights - Liste des villes{% endblock %}

{% block body %}

<section class="container">
    <div class="row">
        <div class="col-1"></div>
        <div class="col-10">
            <h2 class="p-2 text-secondary">Liste des villes</h2>

                <table class="table text-center">
                    <thead>
                        <tr>
                            <th>Ville</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for city in cities %}
                        <tr>
                            <td>{{ city.name }}</td>

                            <td>
                                <button class="btn btn-warning m-1"><a href="{{ path('cities_edit', {'id': city.id}) }}" style="text-decoration:none; color:#000" ><i class="fa-solid fa-pen-to-square" style="color: #000000;"></i></a></button>
                                {{ include('admin/cities/_delete_form.html.twig') }}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="2">Aucunes villes enregistrées</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <button class="btn btn-warning m-3">
                    <a href="{{ path('cities_new') }}" style="text-decoration:none; color:#000">
                        <i class="fa-solid fa-square-plus p-2" style="color: #000000;"></i>
                    Créer un nouvelle ville</a>
                </button>
        </div>
        <div class="col-1"></div>
    </div>
</section>


{% endblock %}
